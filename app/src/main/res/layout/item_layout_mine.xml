<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_mine"
        android:padding="@dimen/padding_size_4"
        android:background="@drawable/rect_0_white_line"
        android:layout_margin="@dimen/padding_size_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/iv_mine"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_user" />
    </RelativeLayout>

    <TextView
        android:layout_below="@id/rl_mine"
        android:layout_marginTop="@dimen/text_size_6"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="内容" />
</RelativeLayout>